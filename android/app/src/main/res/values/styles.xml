<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--Status bar-->
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/statusBarBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/statusBarLight</item>

        <!--Top bar-->
        <item name="android:colorPrimary" tools:targetApi="21">@color/mainBackground</item>

        <!--Background-->
        <item name="android:windowBackground">@color/mainBackground</item>

        <!--Navigation bar (most bottom one)-->
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navBarBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">@bool/navBarLight</item>
    </style>

    <style name="Extension" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>